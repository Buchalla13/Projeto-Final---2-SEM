<%- include('partials.ejs/header') %>

<main class="container">
    <div class="card-row">
        <div class="card">
            <img src="/images/logo.jpg" class="card-img-top" alt="logo">
            <div class="card-body formLogin">
                <h2 class="card-title">Login do Funcionário</h2>
                <form action="/auth/login-funcionario" method="POST" class="formLogin">
                    <div class="mb-3">
                        <label for="email" class="form-label">E-mail</label>
                        <input type="email" class="form-control" id="email" name="email" required>
                    </div>
                    <div class="mb-3">
                        <label for="senha" class="form-label">Senha</label>
                        <input type="password" class="form-control" id="senha" name="senha" required>
                    </div>
                    <button type="submit" class="btn">Entrar</button>
                </form>
                <p class="mt-3">Não tem conta? <a href="/inscrever_funcionario">Cadastre-se</a></p>
            </div>
        </div>
    </div>
</main>

<%- include('partials.ejs/footer') %>
