<%- include('partials.ejs/header') %>

    <main class="flex-grow-1">
        <div class="container py-4">
            <h2 class="mb-3">Painel do Funcionário</h2>

            <!-- Nav pills -->
            <ul class="nav nav-pills mb-3" id="funcTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="produtos-tab" data-bs-toggle="pill" data-bs-target="#produtos"
                        type="button" role="tab">Produtos</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="clientes-tab" data-bs-toggle="pill" data-bs-target="#clientes"
                        type="button" role="tab">Clientes</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="vendas-tab" data-bs-toggle="pill" data-bs-target="#vendas"
                        type="button" role="tab">Vendas</button>
                </li>
            </ul>

            <div class="tab-content">
                <!-- PRODUTOS -->
                <div class="tab-pane fade show active" id="produtos" role="tabpanel">
                    <div class="d-flex justify-content-end mb-2">
                        <button id="btnNovoProduto" class="btn btn-sm btn-success">Novo Produto</button>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-dark table-striped mb-0" id="tblProdutos">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Descrição</th>
                                    <th>Categoria</th>
                                    <th>Preço</th>
                                    <th>Tamanho</th>
                                    <th>Cor</th>
                                    <th>Imagem</th>
                                    <th>Estoque</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (produtos && produtos.length) { %>
                                    <% produtos.forEach(produto => { %>
                                            <tr data-id="<%= produto.id %>">
                                                <td><%= produto.id %></td>
                                                <td><%= produto.nome %></td>
                                                <td><%= produto.descricao || '-' %></td>
                                                <td><%= produto.categoriaId || '-' %></td>
                                                <td><%= produto.preco != null ? ('R$ ' + produto.preco) : '-' %></td>
                                                <td><%= produto.Tamanho || '-' %></td>
                                                <td><%= produto.Cor || '-' %></td>
                                                <td>
                                                    <% if (produto.Imagem) { %>
                                                        <img src="<%= produto.Imagem %>" alt="<%= produto.nome %>" style="height:40px;object-fit:cover;border-radius:4px" />
                                                    <% } else { %>
                                                        -
                                                    <% } %>
                                                </td>
                                                <td><%= produto.Estoque || produto.estoque || 0 %></td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-primary btn-editar-produto">Editar</button>
                                                        <button type="button" class="btn btn-sm btn-danger btn-excluir-produto">Excluir</button>
                                                    </td>
                                            </tr>
                                        <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="10">Nenhum produto encontrado</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- CLIENTES -->
                <div class="tab-pane fade" id="clientes" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped mb-0" id="tblClientes">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Tipo</th>
                                    <th>CPF</th>
                                    <th>Endereço</th>
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (clientes && clientes.length) { %>
                                    <% clientes.forEach(cliente => { %>
                                        <tr data-id="<%= cliente.id %>">
                                            <td><%= cliente.id %></td>
                                            <td><%= cliente.nome %></td>
                                            <td><%= cliente.email %></td>
                                            <td><%= cliente.tipo || '-' %></td>
                                            <td><%= cliente.cpf || '-' %></td>
                                            <td><%= cliente.endereco || '-' %></td>
                                            <td>
                                                <button type="button" class="btn btn-sm btn-primary btn-editar-cliente">Editar</button>
                                                <button type="button" class="btn btn-sm btn-danger btn-excluir-cliente">Excluir</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="7">Nenhum cliente encontrado</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- VENDAS -->
                <div class="tab-pane fade" id="vendas" role="tabpanel">
                    <div class="table-responsive">
                        <table class="table table-dark table-striped mb-0" id="tblVendas">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Cliente</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <!-- funcionário, pagamento e endereço removidos (obsoletos) -->
                                    <th>Ações</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (vendas && vendas.length) { %>
                                    <% vendas.forEach(venda => { %>
                                        <tr data-id="<%= venda.id %>">
                                            <td><%= venda.id %></td>
                                                <td><%= venda.clienteNome || ((venda.cliente && venda.cliente.nome) ? venda.cliente.nome : (venda.usuarioId || '-')) %></td>
                                                    <td><%= venda.total != null ? ('R$ ' + venda.total) : '-' %></td>
                                                    <td><%= venda.tipo || '-' %></td>
                                                    <!-- pagamento/endereço removidos -->
                                            <td>
                                                <button type="button" class="btn btn-sm btn-primary btn-editar-venda">Editar</button>
                                                <button type="button" class="btn btn-sm btn-danger btn-excluir-venda">Excluir</button>
                                            </td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5">Nenhuma venda encontrada</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>

            </div> <!-- /.tab-content -->
        </div>
    </main>

    <!-- Modais: Produto (criar/editar), Cliente (editar), Venda (editar) e Confirmação -->
    <!-- Modal Produto -->
    <div class="modal fade" id="modalProduto" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog modal-lg">
            <form id="formProduto" class="modal-content" enctype="multipart/form-data">
                <div class="modal-header">
                    <h5 class="modal-title">Produto</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" />
                    <div class="mb-2">
                        <label class="form-label">Nome</label>
                        <input name="nome" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Categoria (ID)</label>
                        <input name="categoriaId" class="form-control" />
                    </div>
                    <div class="mb-2 row">
                        <div class="col">
                            <label class="form-label">Preço</label>
                            <input name="preco" type="number" step="0.01" class="form-control" />
                        </div>
                        <div class="col">
                            <label class="form-label">Tamanho</label>
                            <input name="Tamanho" class="form-control" />
                        </div>
                        <div class="col">
                            <label class="form-label">Cor</label>
                            <input name="Cor" class="form-control" />
                        </div>
                        <div class="col">
                            <label class="form-label">Estoque</label>
                            <input name="Estoque" type="number" class="form-control" />
                        </div>
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Descrição</label>
                        <textarea name="descricao" class="form-control"></textarea>
                    </div>
                    <!-- Upload de imagem -->
                    <div class="mb-2">
                        <label class="form-label">Imagem</label>
                        <input type="file" name="imagem" accept="image/*" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Confirmação -->
    <div class="modal fade" id="modalConfirm" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <p id="confirmText">Confirmar ação?</p>
                    <div class="d-flex justify-content-end gap-2">
                        <button id="confirmCancel" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button id="confirmOk" class="btn btn-danger">Confirmar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal Cliente (editar) -->
    <div class="modal fade" id="modalCliente" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <form id="formCliente" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Cliente</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" />
                    <div class="mb-2">
                        <label class="form-label">Nome</label>
                        <input name="nome" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Email</label>
                        <input name="email" type="email" class="form-control" required />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Endereço</label>
                        <input name="endereco" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">CPF</label>
                        <input name="cpf" class="form-control" />
                    </div>
                    <!-- edição de senha removida do painel: use a página de perfil ou recuperação -->
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>

    <!-- Modal Venda (editar) -->
    <div class="modal fade" id="modalVenda" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <form id="formVenda" class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Editar Venda</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="id" />
                    <div class="mb-2">
                        <label class="form-label">Total</label>
                        <input name="total" type="number" step="0.01" class="form-control" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Status</label>
                        <select name="tipo" class="form-control">
                            <option value="pendente">pendente</option>
                            <option value="processando">processando</option>
                            <option value="enviado">enviado</option>
                            <option value="entregue">entregue</option>
                            <option value="cancelada">cancelada</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Salvar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                </div>
            </form>
        </div>
    </div>

    <%- include('partials.ejs/footer') %>

        <script>
            // Frontend helper (exemplos) - adaptar endpoints para seu backend
            const modalProdutoEl = document.getElementById('modalProduto');
            const bsModalProduto = new bootstrap.Modal(modalProdutoEl);
            const formProduto = document.getElementById('formProduto');
            const modalClienteEl = document.getElementById('modalCliente');
            const bsModalCliente = new bootstrap.Modal(modalClienteEl);
            const formCliente = document.getElementById('formCliente');
            const modalVendaEl = document.getElementById('modalVenda');
            const bsModalVenda = new bootstrap.Modal(modalVendaEl);
            const formVenda = document.getElementById('formVenda');
            let currentDelete = null;

            // Abrir modal novo produto
            document.getElementById('btnNovoProduto').addEventListener('click', () => {
                formProduto.reset();
                formProduto.querySelector('[name=id]').value = '';
                bsModalProduto.show();
            });

            // Editar produto (delegation)
            document.getElementById('tblProdutos').addEventListener('click', async (ev) => {
                const btn = ev.target.closest('button');
                if (!btn) return;
                const tr = btn.closest('tr');
                const id = tr && tr.dataset.id;
                    if (btn.classList.contains('btn-editar-produto')) {
                    // buscar dados do produto e preencher form
                    const res = await fetch(`/api/produtos/${id}`);
                    if (res.ok) {
                        const data = await res.json();
                        formProduto.nome.value = data.nome || '';
                        formProduto.categoriaId.value = data.categoriaId || (data.categoria && data.categoria.id) || '';
                        formProduto.preco.value = data.preco || '';
                        formProduto.Tamanho.value = data.Tamanho || '';
                        formProduto.Cor.value = data.Cor || '';
                        formProduto.Estoque.value = data.Estoque || data.estoque || '';
                        formProduto.descricao.value = data.descricao || '';
                        formProduto.id.value = data.id;
                        bsModalProduto.show();
                    } else {
                        alert('Erro ao carregar produto');
                    }
                } else if (btn.classList.contains('btn-excluir-produto')) {
                    currentDelete = { type: 'produto', id };
                    document.getElementById('confirmText').textContent = 'Excluir este produto?';
                    new bootstrap.Modal(document.getElementById('modalConfirm')).show();
                }
            });

            // Submeter form produto (com suporte a upload)
            formProduto.addEventListener('submit', async (e) => {
                e.preventDefault();
                const id = formProduto.id.value;

                const formData = new FormData();
                formData.append('nome', formProduto.nome.value);
                formData.append('descricao', formProduto.descricao.value || '');
                formData.append('preco', formProduto.preco.value || 0);
                formData.append('categoriaId', formProduto.categoriaId.value || '');
                formData.append('Tamanho', formProduto.Tamanho.value || '');
                formData.append('Cor', formProduto.Cor.value || '');
                formData.append('Estoque', formProduto.Estoque.value || 0);

                const fileInput = formProduto.querySelector('[name=imagem]');
                if (fileInput && fileInput.files && fileInput.files[0]) {
                    formData.append('imagem', fileInput.files[0]);
                }

                let url, method;
                if (id) {
                    url = `/api/produtos/${id}`; // uploadRoutes handles PUT with multer
                    method = 'PUT';
                } else {
                    url = '/api/produtos/upload';
                    method = 'POST';
                }

                const res = await fetch(url, {
                    method,
                    body: formData
                });

                if (res.ok) {
                    bsModalProduto.hide();
                    location.reload();
                } else {
                    const txt = await res.text().catch(() => null);
                    alert('Erro ao salvar produto' + (txt ? (': ' + txt) : ''));
                }
            });

            // Confirmação de exclusão
            document.getElementById('confirmOk').addEventListener('click', async () => {
                if (!currentDelete) return;
                const { type, id } = currentDelete;
                let url = '/';
                if (type === 'produto') url = `/api/produtos/${id}`;
                if (type === 'cliente') url = `/api/usuarios/${id}`;
                if (type === 'venda') url = `/api/vendas/${id}`;
                const res = await fetch(url, { method: 'DELETE' });
                if (res.ok) {
                    location.reload();
                } else {
                    alert('Erro ao excluir');
                }
            });

            // Delegation para clientes e vendas (ex.: editar/excluir)
            document.getElementById('tblClientes').addEventListener('click', async (ev) => {
                const btn = ev.target.closest('button');
                if (!btn) return;
                const tr = btn.closest('tr');
                const id = tr.dataset.id;
                if (btn.classList.contains('btn-excluir-cliente')) {
                    currentDelete = { type: 'cliente', id };
                    document.getElementById('confirmText').textContent = 'Excluir este cliente?';
                    new bootstrap.Modal(document.getElementById('modalConfirm')).show();
                } else if (btn.classList.contains('btn-editar-cliente')) {
                    // buscar cliente e abrir modal de edição
                    try {
                        const res = await fetch(`/api/usuarios/${id}`);
                        if (!res.ok) throw new Error('Falha ao carregar cliente');
                        const data = await res.json();
                        formCliente.id.value = data.id;
                        formCliente.nome.value = data.nome || '';
                        formCliente.email.value = data.email || '';
                        formCliente.endereco.value = data.endereco || '';
                        formCliente.cpf.value = data.cpf || '';
                        // senha não é editável aqui
                        bsModalCliente.show();
                    } catch (err) {
                        alert('Erro ao carregar cliente');
                    }
                }
            });

            // submit editar cliente
            formCliente.addEventListener('submit', async (e) => {
                e.preventDefault();
                const id = formCliente.id.value;
                const payload = {
                    nome: formCliente.nome.value,
                    email: formCliente.email.value,
                    endereco: formCliente.endereco.value || null,
                    cpf: formCliente.cpf.value || null
                };
                // senha removida do payload por segurança (alteração de senha via perfil)

                try {
                    const res = await fetch(`/api/usuarios/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (res.ok) {
                        bsModalCliente.hide();
                        location.reload();
                    } else {
                        const txt = await res.text().catch(() => null);
                        alert('Erro ao salvar cliente' + (txt ? ': ' + txt : ''));
                    }
                } catch (err) {
                    alert('Erro de rede ao salvar cliente');
                }
            });

            document.getElementById('tblVendas').addEventListener('click', async (ev) => {
                const btn = ev.target.closest('button');
                if (!btn) return;
                const tr = btn.closest('tr');
                const id = tr.dataset.id;
                if (btn.classList.contains('btn-excluir-venda')) {
                    currentDelete = { type: 'venda', id };
                    document.getElementById('confirmText').textContent = 'Excluir esta venda?';
                    new bootstrap.Modal(document.getElementById('modalConfirm')).show();
                } else if (btn.classList.contains('btn-editar-venda')) {
                    try {
                        const res = await fetch(`/api/vendas/${id}`);
                        if (!res.ok) throw new Error('Falha ao carregar venda');
                        const data = await res.json();
                        formVenda.id.value = data.id;
                        formVenda.total.value = data.total || '';
                        formVenda.tipo.value = data.tipo || data.status || 'pendente';
                        bsModalVenda.show();
                    } catch (err) {
                        alert('Erro ao carregar venda');
                    }
                }
            });

            // submit editar venda
            formVenda.addEventListener('submit', async (e) => {
                e.preventDefault();
                const id = formVenda.id.value;
                const payload = {
                    total: formVenda.total.value || 0,
                    tipo: formVenda.tipo.value
                };
                try {
                    const res = await fetch(`/api/vendas/${id}`, {
                        method: 'PUT',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(payload)
                    });
                    if (res.ok) {
                        bsModalVenda.hide();
                        location.reload();
                    } else {
                        const txt = await res.text().catch(() => null);
                        alert('Erro ao salvar venda' + (txt ? ': ' + txt : ''));
                    }
                } catch (err) {
                    alert('Erro de rede ao salvar venda');
                }
            });
        </script>